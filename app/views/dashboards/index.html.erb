<h1>Listing dashboards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Enabled</th>
      <th>Refresh</th>
      <th>Refresh To</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dashboards.each do |dashboard| %>
      <tr>
        <td><%= dashboard.name %></td>
        <td><%= dashboard.slug %></td>
        <td><%= dashboard.enabled %></td>
        <td><%= dashboard.refresh %></td>
        <td><%= dashboard.refresh_to %></td>
        <td><%= dashboard.dashboard_cells.count %></td>
        <td><%= link_to 'See', render_dashboard_path(dashboard.slug), target: "_blank" %></td>
        <td><%= link_to 'Show', dashboard %></td>
        <td><%= link_to 'Edit', edit_dashboard_path(dashboard) %></td>
        <td><%= link_to 'Destroy', dashboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dashboard', new_dashboard_path %>
