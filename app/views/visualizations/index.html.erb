<h1>Listing visualizations</h1>

<table>
  <thead>
    <tr>
      <th>Enabled?</th>
      <th>Name</th>
      <th>Slug</th>
      <th>Markup type</th>
      <th>Created</th>
      <th>Updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @visualizations.each do |visualization| %>
      <tr>
        <td><%= visualization.enabled %></td>
        <td><%= visualization.name %></td>
        <td><%= visualization.slug %></td>
        <td><%= visualization.markup_type %></td>
        <td><%= time_ago_in_words(visualization.created_at) %></td>
        <td><%= time_ago_in_words(visualization.updated_at) %></td>
        <td><%= link_to 'Show', visualization %></td>
        <td><%= link_to 'Edit', edit_visualization_path(visualization) %></td>
        <td><%= link_to 'Destroy', visualization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

